{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [
    100,
    120
  ],
  "editor.renderWhitespace": "selection",
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.indentation": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,
  "editor.fontFamily": "Cascadia Code, JetBrains Mono, Fira Code, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 24,
  "editor.fontWeight": "normal",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.autoSave": "onFocusChange",
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/.gradle": true,
    "**/build": true,
    "**/.idea": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.metadata": true,
    "**/out": true,
    "**/bin": true
  },
  "files.watcherExclude": {
    "**/.gradle/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/bin/**": true
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.fontFamily": "Cascadia Code",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.smoothScrolling": true,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.activityBar.location": "top",
  "workbench.editor.labelFormat": "short",
  "workbench.tree.indent": 18,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": false,
  "breadcrumbs.enabled": true,
  "window.commandCenter": true,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "errorLens.enabled": true,
  "errorLens.fontWeight": "normal",
  "errorLens.fontSize": "12px",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.decorations.enabled": true,
  "editor.defaultFormatter": null,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.saveActions.organizeImports": true,
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "C:\\Program Files\\Java\\jdk-17",
      "default": true
    }
  ],
  "java.debug.settings.console": "integratedTerminal",
  "java.debug.settings.vmArgs": "-Dfile.encoding=UTF-8",
  "kotlin.debugAdapter.enabled": true,
  "kotlin.trace.server": "off",
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[kotlin]": {
    "editor.defaultFormatter": "rnoro.vscode-ktlint-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[kotlin-script]": {
    "editor.defaultFormatter": "rnoro.vscode-ktlint-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "chatgpt.openOnStartup": false,
  "chatgpt.commentCodeLensEnabled": true,
  "chatgpt.localeOverride": "id",
  "chatgpt.runCodexInWindowsSubsystemForLinux": true,
  "cSpell.ignorePaths": [
    "C:\\Users\\Acer\\.codex\\config.toml"
  ],
  "cSpell.words": [
    "xhigh",
    "oaicite",
    "gradlew",
    "codex",
    "chatgpt",
    "openai",
    "ktlint",
    "macchiato",
    "berani",
    "biar",
    "muncul",
    "terus",
    "gampang",
    "tergantung"
  ]
}
