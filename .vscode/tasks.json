{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MutuGemba: Compile Desktop",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        ":app-desktop:compileKotlin",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Rebuild Desktop",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "clean",
        ":app-desktop:build",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Run Desktop",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        ":app-desktop:run",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "MutuGemba: Compile Desktop"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Run Desktop (Continuous)",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        ":app-desktop:run",
        "--continuous",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "MutuGemba: Compile Desktop"
      ],
      "isBackground": true,
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Format",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "ktlintFormat",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Lint",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "ktlintCheck",
        "detektAll",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Test",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "test",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: Verify Fast",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "ktlintCheck",
        ":app-desktop:compileKotlin",
        "test",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "MutuGemba: CI Verify",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "--no-daemon",
        "clean",
        "ktlintCheck",
        "detektAll",
        "test",
        ":app-desktop:build",
        "--console=plain"
      ],
      "windows": {
        "command": ".\\gradlew.bat"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
